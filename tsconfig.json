{
  "compilerOptions": {
    "target": "ES3",
    "lib": ["ESNext"],
    "types": ["node", "jest"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
